{
    "type": "mongodb",
    "host": "localhost",
    "port": 27017,
    "database": "quizuvioDB",
    "synchronize": true,
    "logging": false,
    "useNewUrlParser": true,
    "useUnifiedTopology": true,
    "entities": [
        "src/entities/**/*.ts"
    ],
    "migrations": [
        "src/migration/**/*.ts"
    ],
    "subscribers": [
        "src/subscriber/**/*.ts"
    ],
    "cli": {
        "entitiesDir": "src/entities",
        "migrationsDir": "src/migration",
        "subscribersDir": "src/subscriber"
    }
}